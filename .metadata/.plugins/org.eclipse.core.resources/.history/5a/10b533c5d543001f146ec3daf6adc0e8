package ch04;

public class Ex10 {

	public static void main(String[] args) {
		int a = 0;
		while(true) {
			
			if(a == 10) {
				break;
			}
			//System.out.println(a);
			a++;
		}
		
		/*for문을 이용하여 순차적으로 1에서 n까지의 
		합이 100에서 최대한 가까운 합을 리턴*/
		
		int sum = 0;
		
		for(int i  = 1; true; i++) {
			if(sum > 100) break;
			sum += i;
		}
		System.out.println(sum);
		
		sum = 0;
		int i = 1;
		for(; true; i++) {
			sum += i;
			if(sum > 100) {
				break;
			}
		}
		System.out.println(i);
	}

}
